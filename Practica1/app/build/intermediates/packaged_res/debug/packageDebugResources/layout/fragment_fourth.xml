<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".FourthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgAlu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:src="@drawable/alu" />

        <TextView
            android:id="@+id/tituloDefAlu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#202124"
            android:text="¿Qué es la ALU?" />

        <TextView
            android:id="@+id/defAlu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:textColor="#5F6368"
            android:text="La Unidad Aritmético-Lógica (ALU) es el verdadero cerebro matemático de la computadora. Es el circuito digital que calcula operaciones aritméticas (como sumas y restas) y operaciones lógicas (como AND, OR, XOR) entre valores binarios." />

        <TextView
            android:id="@+id/codeVHDL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#1E1E1E"
            android:textColor="#4AF626"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:text="-- Compuerta AND en VHDL\nentity AND_GATE is\n  Port ( A, B : in STD_LOGIC;\n         Y : out STD_LOGIC);\nend AND_GATE;\n\narchitecture Logica of AND_GATE is\nbegin\n  Y &lt;= A and B;\nend Logica;" />

        <TextView
            android:id="@+id/tituloCuriosidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#202124"
            android:text="Fun Fact: Escala Nanométrica" />

        <TextView
            android:id="@+id/funFactAlu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:lineSpacingExtra="5dp"
            android:textColor="#5F6368"
            android:text="Toda esta magia lógica se logra gracias a los transistores. Procesadores modernos como el Ryzen 5 5600X están fabricados con una arquitectura de 7nm. Esto permite empaquetar alrededor de 4 mil millones de transistores microscópicos en un solo chip para formar todas las compuertas lógicas y flip-flops necesarios." />

        <ImageView
            android:id="@+id/imgCPU"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cpu" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#5C72B8"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:text="Regresar al Sistema Principal" />

    </LinearLayout>
</ScrollView>